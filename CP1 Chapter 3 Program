'Computer Programming 1
'Final Program
Option Strict On
Option Explicit On
Module Module1

    Sub Main()

        ' CAUTION! ANY DATA ENTERED MUST BE VALID OR ELSE 'TIME' WILL CAUSE A RUNTIME ERROR

        Dim p1, a, v, t, p2 As Double

        Console.Write("Caution! any data entered must be valid or else 'time' will cause a run time error")
        Console.WriteLine(" ")
        Console.ReadLine()

        Console.Write("Please specify the starting position: ")
        p1 = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the acceleration: ")
        a = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the initial velocity: ")
        v = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the time: ")
        t = Convert.ToDecimal(Console.ReadLine())

        'Console.Write("Please specify the ending position: ")
        'p2 = Convert.ToDouble(Console.ReadLine())

        p2 = 0.5 * a * t ^ 2 + v * t + p1

        Console.WriteLine(" ")
        Console.WriteLine("p1 = " & p1)
        Console.WriteLine("a = " & a)
        Console.WriteLine("v = " & v)
        Console.WriteLine("t = " & t)
        Console.WriteLine(" ")
        Console.WriteLine("Using p2 = 0.5 * a * t ^ 2 + v * t + p1, we can determine that the final position is " & p2)
        Console.WriteLine(" ")
        Console.WriteLine(" ")
        Console.WriteLine(" ")
        Console.ReadLine()

        '^p2

        Console.Write("Please specify the starting position: ")
        p1 = Convert.ToDouble(Console.ReadLine())

        'Console.Write("Please specify the acceleration: ")
        'a = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the initial velocity: ")
        v = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the time: ")
        t = Convert.ToDecimal(Console.ReadLine())

        Console.Write("Please specify the ending position: ")
        p2 = Convert.ToDouble(Console.ReadLine())

        a = (p2 - p1 - v * t) / (0.5 * t ^ 2)

        Console.WriteLine(" ")
        Console.WriteLine("p1 = " & p1)
        Console.WriteLine("p2 = " & p2)
        Console.WriteLine("v = " & v)
        Console.WriteLine("t = " & t)
        Console.WriteLine(" ")
        Console.WriteLine("Using a = (p2 - p1 - v * t) / (0.5 * t ^ 2), we can determine that the acceleration is " & a)
        Console.WriteLine(" ")
        Console.WriteLine(" ")
        Console.WriteLine(" ")
        Console.ReadLine()

        '^a

        Console.Write("Please specify the starting position: ")
        p1 = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the acceleration: ")
        a = Convert.ToDouble(Console.ReadLine())

        'Console.Write("Please specify the initial velocity: ")
        'v = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the time: ")
        t = Convert.ToDecimal(Console.ReadLine())

        Console.Write("Please specify the ending position: ")
        p2 = Convert.ToDouble(Console.ReadLine())

        v = (p2 - p1 - 0.5 * a * t ^ 2) / t

        Console.WriteLine(" ")
        Console.WriteLine("p1 = " & p1)
        Console.WriteLine("p2 = " & p2)
        Console.WriteLine("a = " & a)
        Console.WriteLine("t = " & t)
        Console.WriteLine(" ")
        Console.WriteLine("Using v = (p2 - p1 - 0.5 * a * t ^ 2) / t, we can determine that the initial velocity is " & v)
        Console.WriteLine(" ")
        Console.WriteLine(" ")
        Console.WriteLine(" ")
        Console.ReadLine()

        '^v

        'Console.Write("Please specify the starting position: ")
        'p1 = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the acceleration: ")
        a = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the initial velocity: ")
        v = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the time: ")
        t = Convert.ToDecimal(Console.ReadLine())

        Console.Write("Please specify the ending position: ")
        p2 = Convert.ToDouble(Console.ReadLine())

        p1 = p2 - 0.5 * a * t ^ 2 - v * t

        Console.WriteLine(" ")
        Console.WriteLine("a = " & a)
        Console.WriteLine("p2 = " & p2)
        Console.WriteLine("v = " & v)
        Console.WriteLine("t = " & t)
        Console.WriteLine(" ")
        Console.WriteLine("Using p1 = p2 - 0.5 * a * t ^ 2 - v * t, we can determine that the starting position is " & p1)
        Console.WriteLine(" ")
        Console.WriteLine(" ")
        Console.WriteLine(" ")
        Console.ReadLine()

        '^p1

        Console.WriteLine("Extra Credit")

        Console.WriteLine(" ")

        Console.Write("Please specify the starting position: ")
        p1 = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the acceleration: ")
        a = Convert.ToDouble(Console.ReadLine())

        Console.Write("Please specify the initial velocity: ")
        v = Convert.ToDouble(Console.ReadLine())

        'Console.Write("Please specify the time: ")
        't = Convert.ToDecimal(Console.ReadLine())

        Console.Write("Please specify the ending position: ")
        p2 = Convert.ToDouble(Console.ReadLine())

        t = (-(v) + Math.Sqrt(v ^ 2 - 4 * 0.5 * a * (p1 - p2))) / (2 * 0.5 * a)

        Console.WriteLine(" ")
        Console.WriteLine("a = " & a)
        Console.WriteLine("p2 = " & p2)
        Console.WriteLine("v = " & v)
        Console.WriteLine("p1 = " & p1)
        Console.WriteLine(" ")
        Console.WriteLine("Using t = (-(v) + Math.Sqrt(v ^ 2 - 4 * 0.5 * a * (p1 - p2))) / (2 * 0.5 * a), we can determine that the time is " & t)
        Console.WriteLine(" ")
        Console.WriteLine(" ")
        Console.WriteLine(" ")
        Console.ReadLine()

        '^t

    End Sub

End Module
