'Computer Programming 1
'Chapter 4 lab 5: Alphabet Restaurant

Option Strict On
Option Explicit On

Module Module1

    Sub Main()
        Dim x As Char
        Console.Write("Please input a letter to get a food that starts with that letter: ")
        x = Convert.ToChar(Console.ReadLine())
        Select Case x
            Case Is = "a"c
                Console.WriteLine("A - Apple")
            Case Is = "b"c
                Console.WriteLine("B - Banana")
            Case Is = "c"c
                Console.WriteLine("C - Cherry")
            Case Is = "d"c
                Console.WriteLine("D - Doughnut")
            Case Is = "e"c
                Console.WriteLine("E - Elderberry")
            Case Is = "f"c
                Console.WriteLine("F - French Fries")
            Case Is = "g"c
                Console.WriteLine("G - Grapes")
            Case Is = "h"c
                Console.WriteLine("H - Ham")
            Case Is = "i"c
                Console.WriteLine("I - Ice Cream")
            Case Is = "j"c
                Console.WriteLine("J - Jello")
            Case Is = "k"c
                Console.WriteLine("K - Kielbasa")
            Case Is = "l"c
                Console.WriteLine("L - Lamb Chops")
            Case Is = "m"c
                Console.WriteLine("M - Manwich")
            Case Is = "n"c
                Console.WriteLine("N - Nectarine")
            Case Is = "o"c
                Console.WriteLine("O - Orange")
            Case Is = "p"c
                Console.WriteLine("P - Pizza")
            Case Is = "q"c
                Console.WriteLine("Q - Quesadilla")
            Case Is = "r"c
                Console.WriteLine("R - Radish")
            Case Is = "s"c
                Console.WriteLine("S - Salsa")
            Case Is = "t"c
                Console.WriteLine("T - Tangerine")
            Case Is = "u"c
                Console.WriteLine("U - Umbrella Fruit")
            Case Is = "v"c
                Console.WriteLine("V - Venison")
            Case Is = "w"c
                Console.WriteLine("W - Watermelon")
            Case Is = "x"c
                Console.WriteLine("X - Xouba")
            Case Is = "y"c
                Console.WriteLine("Y - Yams")
            Case Is = "z"c
                Console.WriteLine("Z - Zucchini")
        End Select
        Console.ReadLine()
    End Sub

End Module
